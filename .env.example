# ================================
# BANCO DE DADOS (PostgreSQL)
# ================================
POSTGRES_HOST=postgres-replica
POSTGRES_PORT=5432
POSTGRES_DB=ai_database
POSTGRES_USER=ai_user
# Gere com: openssl rand -hex 32
POSTGRES_PASSWORD=CHANGE_ME

# ================================
# CACHE (Redis)
# ================================
REDIS_HOST=redis
REDIS_PORT=6379

# ================================
# MODELO DE LINGUAGEM (Ollama)
# ================================
OLLAMA_URL=http://ollama:11434
OLLAMA_MODEL=qwen:7b

# ================================
# AUTENTICAÇÃO DA API
# ================================
# Gere com: openssl rand -hex 32
API_KEY=CHANGE_ME

# ================================
# RATE LIMITING E CACHE
# ================================
RATE_LIMIT=5
CACHE_TTL=3600

# ================================
# LIMITES DE RESULTADO
# ================================
MAX_ROWS=100
MAX_HISTORY=5

# ================================
# LOGS
# ================================
# Valores: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# ================================
# CORS
# ================================
# Em produção: liste os domínios separados por vírgula
# Ex: https://meusite.com,https://app.meusite.com
# Use * apenas para desenvolvimento
CORS_ORIGINS=*
